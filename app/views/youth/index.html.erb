<div id="top_info" class="intro">
  <div class="get_ticket">
    <%= link_to image_tag("/images/get_ticket.jpg"), {:controller => 'youth', :action => "booking"} %>
  </div>
  <div class="learn_more">
    <%= link_to image_tag("/images/learn_more.jpg"), {:controller => 'youth', :action => "guide"} %>
  </div>
</div>

<div id="events" class="box">
