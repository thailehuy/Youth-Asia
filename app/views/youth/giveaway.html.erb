<div id="giveaway_info">
  We give out RM50000 for those who help promoting Youth'10 to other youths.
  <ul>
    <li>
      RM5000 for 20 largest youth gatherings.
    </li>
    <li>
      RM40000 worth of products and cash on other contests.
    </li>
  </ul>

  <%= link_to "Join Youth gathering", url_for(:action => "gathering"), :class => "bigButton" %>
</div>

<input type="submit" id="invite_friends" />

<script type="text/javascript">
    $(function() {
      $('invite_friends').click(function() {
        var box = new FB.UI.FBMLPopupDialog("Send invites to your 'friends'",'<fb:fbml><fb:request-form action="' + location.href + '" method="GET" invite="true" type="Quiz Hater" content="Hey, since you like to take quizes, I thought that you might like to take this one!' + htmlentities('<fb:req-choice url="http://apps.facebook.com/thequizhater" label="Take the quiz!" />') + '"><fb:multi-friend-selector rows="2" cols="3" showborder="false" bypass="cancel" actiontext="Send a not-so-subtle message to those who like to take and publish too many quizes!"></fb:request-form></fb:fbml>');
        box.setContentWidth(700);
        box.setContentHeight(520);
        box.set_placement(FB.UI.PopupPlacement.center);
        box.show();
      });

    });

  </script>