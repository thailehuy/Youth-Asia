<%= error_messages_for :ticket %>

<% form_for :ticket, @ticket, :url => url_for(:action => "create_ticket") do |f| %>
<table>
  <tr>
    <td>
      <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </p>
    </td>
    <td>
      <%= f.check_box :agreement, :label => "I have read and agree with Terms &amp; Conditions" %>
    </td>
  </tr>
  <tr>
    <td>
      <p>
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :phone %><br/>
        <%= f.text_field :phone %>
      </p>
      <p>
        <%= f.label :ic_number %><br/>
        <%= f.text_field :ic_number %>
      </p>
    </td>
    <td>
      <%= submit_tag "Book ticket" %><br/>
      <%= link_to "Visit YouthSays.com", "http://www.youthsays.com" %>
    </td>
  </tr>
</table>
<% end %>