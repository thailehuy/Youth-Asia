<div id="subnav">
    <%= render :partial => "subnav"%>
</div><!-- end of #subnav -->

<div id="content">			

        <h1>Tất cả menu theo ngày </h1>			
        <br class="clr" />

        <p class="pb5"><a href="#" onclick="toggleSelectAll('listMenuDate', 'check')">Chọn tất cả</a> | <a href="#" onclick="toggleSelectAll('listMenuDate', 'uncheck')">Bỏ tất cả</a></p>
			
        <p class="pb20">
        <%= submit_tag "Xóa", :class => "actionBtn" %>
        </p>

        <table class="listMenu" id="listMenuDate" name="listMenuDate">
            <tr>
                    <th>&nbsp;</th>
                    <th>Ngày</th>
                    <th>Tên</th>
                    <th>&nbsp;</th>
            </tr>

            <%= render :partial => "menus/list/menu_date", :collection => @menu_dates %>
        </table>			

        <div class="pagination">
                <%= render :partial => "menus/list/paginate_menu", :locals => {:collection => @menu_dates} %>
        </div>


</div><!-- end of #content -->
<br class="clr" />
